<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#283017</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#404041</item>
    </style>

    <style name="HeaderTheme" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    
    </style>

    <style name="CustomTheme" parent="android:Theme">
        <item name="android:background">#323227</item>
        <item name="android:drawableStart">@style/HeaderTheme</item>
    </style>

    <style name="loading">
        <item name="android:background">#283017</item>
    </style>

    <style name="wel">
        <item name="android:textColor">#b0d34d</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="mel">
        <item name="android:textColor">#b0d34d</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>